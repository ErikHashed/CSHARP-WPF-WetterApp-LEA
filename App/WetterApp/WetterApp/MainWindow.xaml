<Window x:Class="WetterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wetter App" Height="350" Width="500"
        ResizeMode="NoResize">
        
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Stadt:" />
            <TextBox x:Name="txtStadt" Width="200" Margin="0,5" />
            <Button Content="Suchen" Click="Suchen_Click" Width="100" Margin="0,10" />
            <TextBlock x:Name="txtErgebnis" Margin="0,20" />
            <Label x:Name="txtLang" />

        </StackPanel>
        <!--<Image x:Name="Bild" Margin="93,232,350,39" Source="/Screenshot (1).png" />-->
        <Rectangle x:Name="Bild" Margin="116,234,289,50"> </Rectangle>
    </Grid>
</Window>
