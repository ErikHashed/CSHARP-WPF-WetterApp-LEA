<Window x:Class="WetterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wetter App" Height="350" Width="500">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Stadt:" />
            <TextBox x:Name="txtStadt" Width="200" Margin="0,5" />
            <Button Content="Suchen" Click="Suchen_Click" Width="100" Margin="0,10" />
            <TextBlock x:Name="txtErgebnis" Margin="0,20" />
            <Label x:Name="txtLang" />
        </StackPanel>
    </Grid>
</Window>
