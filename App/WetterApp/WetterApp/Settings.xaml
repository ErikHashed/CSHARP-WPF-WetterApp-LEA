<Window x:Class="WetterApp.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WetterApp"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="800">
    <Grid>
        <ComboBox x:Name="languageListComboBox" HorizontalAlignment="Left" Margin="41,83,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="languageList_SelectionChanged">
            <ComboBoxItem Content="Deutsch" Tag="de"/>
            <ComboBoxItem Content="Englisch" Tag="en"/>
            <ComboBoxItem Content="mehr hier adden" Tag="sprache abkürzung hier"/>


        </ComboBox>

    </Grid>
</Window>
