<Window x:Class="WetterApp.data"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WetterApp"
        mc:Ignorable="d"
        Title="daten" Height="450" Width="800">
    <Grid>
        <Rectangle x:Name="weatherImage" Height="120" Margin="251,10,297,304"/>
        <Rectangle x:Name="weatherIcon" Margin="275,248,461,126" ></Rectangle>
        <Rectangle x:Name="weatherIcon2" Margin="275,308,466,73" ></Rectangle>
        <!--<TextBlock x:Name="txtErgebnis" HorizontalAlignment="Left" Margin="123,0,0,0" VerticalAlignment="Center" Height="192" Width="327"/>-->
        <TextBlock x:Name="txtTemp" Margin="339,135,0,0" FontSize="24" HorizontalAlignment="Left" Width="252" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtMinMax" Margin="339,172,255,217" FontSize="16"></TextBlock>
        <ListBox x:Name="forecastList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="339,243,0,10" HorizontalAlignment="Left" Width="206" FontSize="24">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Temperature}" Margin="0 0 10 0"/>
                        <Image Tag="{Binding IconPath}" Width="60" Height="60" Margin="10 0 0 0"/>
                    </StackPanel>
                </DataTemplate>

            </ListBox.ItemTemplate>


        </ListBox>
    </Grid>
</Window>
